{
    "name": "Better VoirAnime",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "A powerful UI/UX changer for 'voiranime.com'",
    "content_scripts": [
        {
            "js": ["scripts/init.js", "scripts/scripts.js"],
            "css": ["style/styles.css"],
            "matches": ["*://voiranime.com/*"]
        }
    ],
    "web_accessible_resources": ["gif/01.gif", "favicon/icon16.png", "icons/dark_mode.svg", "icons/random.svg", "icons/light_mode.svg", "icons/resume.svg", "icons/settings.svg", "icons/stats.svg", "icons/va_logo.svg", "icons/a_search.svg", "icons/home.svg", "icons/list.svg", "icons/new.svg", "icons/search.svg", "icons/soon.svg", "icons/star_full.svg", "icons/star_half.svg", "icons/star_empty.svg", "icons/vf-mark.svg"],
    "icons": {
        "16": "favicon/icon16.png",
        "48": "favicon/icon48.png",
        "128": "favicon/icon128.png"
    },
    "browser_action": {
        "default_popup": "popups/popup.html"
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    }
}